<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style
    name="Activity"
    parent="Match">
    <item name="android:background">@drawable/background</item>
  </style>

  <style
    name="Loading"
    parent="Match">
    <item name="android:background">@color/list_bg</item>
    <item name="android:gravity">center</item>
  </style>

  <style
    name="ListDefaultDivider"
    parent="Match">
    <item name="android:background">@color/list_bg</item>
    <item name="android:cacheColorHint">@color/list_bg</item>
  </style>
  
  <style
    name="List"
    parent="ListDefaultDivider">
    <item name="android:divider">@drawable/list_divider</item>
  </style>

  <style name="ButtonMin">
    <item name="android:layout_width">@dimen/button_min</item>
    <item name="android:layout_height">@dimen/button_min</item>
  </style>

  <style
    name="VerticalMin"
    parent="MatchWidth">
    <item name="android:minHeight">@dimen/vertical_minspace</item>
  </style>

  <style
    name="VerticalMinPad"
    parent="VerticalMin">
    <item name="android:gravity">center_vertical</item>
    <item name="android:padding">@dimen/std_pad</item>
  </style>

  <style
    name="HomeTextArea"
    parent="VerticalMin">
    <item name="android:background">@color/main_fg</item>
    <item name="android:padding">@dimen/std_pad</item>
  </style>

  <!-- Home -->
  <style
    name="HomeTileRow"
    parent="MatchHorizontal">
    <item name="android:layout_weight">1</item>
  </style>

  <style
    name="HomeTile"
    parent="Match">
    <item name="android:layout_weight">1</item>
  </style>

  <style
    name="TileText"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_large</item>
  </style>

  <!-- Entities -->
  <style
    name="EntityText"
    parent="ScrollText">
    <item name="android:textSize">@dimen/text_size_entity</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style
    name="ScrollText"
    parent="MatchWidth">
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:marqueeRepeatLimit">marquee_forever</item>
  </style>

  <style
    name="TagsText"
    parent="ScrollText">
    <item name="android:padding">@dimen/small_pad</item>
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:text">@string/no_tags</item>
  </style>

  <style
    name="RatingBar"
    parent="@android:style/Widget.Holo.RatingBar">
    <item name="android:layout_gravity">center</item>
    <item name="android:numStars">5</item>
    <item name="android:stepSize">1</item>
    <item name="android:layout_marginBottom">@dimen/std_pad</item>
  </style>

  <!-- Searches -->
  <style
    name="SearchEdit"
    parent="Edit">
    <item name="android:imeOptions">actionSearch</item>
  </style>

  <style
    name="SearchButton"
    parent="ButtonMin">
    <item name="android:onClick">onClick</item>
    <item name="android:src">@drawable/btn_search</item>
    <item name="android:contentDescription">@string/description_search</item>
  </style>

  <style
    name="NoSearchResults"
    parent="Match">
    <item name="android:background">@color/main_fg</item>
    <item name="android:gravity">center</item>
    <item name="android:visibility">invisible</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style
    name="NoResultsText"
    parent="NoSearchResults">
    <item name="android:text">@string/no_results</item>
    <item name="android:textSize">@dimen/text_size_large</item>
  </style>

  <style
    name="BarcodeInstructions"
    parent="Match">
    <item name="android:text">@string/barcode_instructions</item>
    <item name="android:background">@color/main_fg</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="android:padding">@dimen/gutter_large</item>
  </style>

  <!-- Text -->
  <style
    name="BigRoboto"
    parent="MatchWidth">
    <item name="android:textSize">@dimen/text_size_xl</item>
    <item name="android:textColor">@color/aux_text</item>
  </style>

  <style
    name="BigRobotoPad"
    parent="BigRoboto">
    <item name="android:layout_marginBottom">@dimen/gutter_large</item>
  </style>

  <style
    name="TextBody"
    parent="MatchWidth">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:autoLink">web</item>
  </style>

  <style
    name="VersionText"
    parent="MatchWidth">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/mb_purple_dark</item>
  </style>

  <style
    name="Edit"
    parent="MatchWidth">
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textFilter</item>
  </style>

  <style
    name="Username"
    parent="Edit">
    <item name="android:hint">@string/uname_hint</item>
    <item name="android:imeOptions">actionNext</item>
  </style>

  <style
    name="Password"
    parent="Edit">
    <item name="android:password">true</item>
    <item name="android:hint">@string/pass_hint</item>
    <item name="android:imeOptions">actionGo</item>
  </style>

  <style
    name="Footer"
    parent="TextBody">
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style
    name="DialogBody"
    parent="MatchWidth">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:padding">@dimen/std_pad</item>
  </style>

  <style
    name="Link"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textColor">@color/link_text</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:marqueeRepeatLimit">-1</item>
  </style>

  <style
    name="LinkDescription"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style
    name="WelcomeText"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:singleLine">true</item>
  </style>

  <style
    name="PayPalLoadingText"
    parent="MatchWidth">
    <item name="android:textSize">@dimen/text_size_entity</item>
    <item name="android:textColor">@color/aux_text</item>
    <item name="android:padding">@dimen/std_pad</item>
    <item name="android:gravity">center</item>
  </style>

  <!-- List items -->
  <style
    name="ListMain"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_large</item>
  </style>

  <style
    name="ListAux"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/aux_text</item>
  </style>

  <style
    name="ListAuxMedium"
    parent="ListAux">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style
    name="ListAuxPad"
    parent="ListAux">
    <item name="android:layout_marginRight">@dimen/small_pad</item>
    <item name="android:layout_marginLeft">@dimen/std_pad</item>
  </style>

  <style
    name="ListMedium"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style
    name="ListReleaseMedium"
    parent="ListMedium">
    <item name="android:textColor">@color/mb_orange_dark</item>
  </style>

  <style
    name="ListReleaseTitles"
    parent="Wrap">
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style
    name="Track"
    parent="ListMedium">
    <item name="android:layout_marginRight">@dimen/small_pad</item>
    <item name="android:layout_marginLeft">@dimen/std_pad</item>
  </style>

  <style
    name="TrackArtist"
    parent="Track">
    <item name="android:textColor">@color/aux_text</item>
    <item name="android:visibility">gone</item>
  </style>

  <style
    name="TrackNum"
    parent="ListMedium">
    <item name="android:layout_centerVertical">true</item>
  </style>

  <style
    name="TrackTime"
    parent="ListMedium">
    <item name="android:layout_marginRight">@dimen/small_pad</item>
    <item name="android:layout_centerVertical">true</item>
  </style>

  <!-- Misc -->
  <style name="Separator">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/separator_thickness</item>
    <item name="android:background">@color/mb_purple_medium</item>
  </style>

  <style name="SeparatorVertical">
    <item name="android:layout_width">@dimen/separator_thickness</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/mb_purple_medium</item>
  </style>

  <style name="LoginButton">
    <item name="android:layout_width">@dimen/login_button</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:enabled">false</item>
  </style>

  <style
    name="LinkButton"
    parent="MatchWidth">
    <item name="android:background">@drawable/link_button</item>
    <item name="android:padding">@dimen/small_pad</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:layout_height">42dp</item>
  </style>
</resources>